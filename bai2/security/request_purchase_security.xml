<odoo>
    <data>
        <record id="rule_purchase_request_personal" model="ir.rule">
            <field name="name">Personal Purchase Requests</field>
            <field name="model_id" ref="model_purchase_request" />
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]" />
        </record>

        <record id="rule_purchase_request_department_manager" model="ir.rule">
            <field name="name">Department Manager Purchase Requests</field>
            <field name="model_id" ref="model_purchase_request" />
            <field name="domain_force">['|', ('department_id', '=', user.employee_id.department_id.id), ('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_purchase_manager'))]" />
        </record>
    </data>
</odoo>