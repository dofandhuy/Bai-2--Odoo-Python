<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_request_tree" model="ir.ui.view">
        <field name="name">purchase.request.tree</field>
        <field name="model">purchase.request</field>
        <field name="arch" type="xml">
            <tree string="Yêu cầu mua hàng" decoration-info="state == 'draft'"
                  decoration-success="state == 'approved'">
                <field name="name"/>
                <field name="department_id" string="Phòng ban"/>
                <field name="request_id" string="Người gửi"/>
                <field name="date" string="Ngày gửi"/>
                <field name="total_qty" sum="Tổng số lượng"/>
                <field name="total_amount" sum="Tổng tiền" widget="monetary"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'"
                       decoration-warning="state == 'wait'" decoration-success="state == 'approved'"/>
            </tree>
        </field>
    </record>
    <record id="view_purchase_request_form" model="ir.ui.view">
        <field name="name">purchase.request.form</field>
        <field name="model">purchase.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Gửi duyệt" type="object"
                            class="oe_highlight"
                            attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('is_requester', '=', False)]}"/>
                    <button name="action_return" string="Quay lại" type="object"
                            class="oe_highlight"
                            attrs="{'invisible': ['|', ('state', '!=', 'wait'), ('is_requester', '=', False)]}"/>
                    <button name="action_approve" string="Phê duyệt" type="object" states="wait"
                            class="oe_highlight" groups="purchase.group_purchase_manager"/>
                    <button name="action_cancel" string="Hủy bỏ" type="object" states="wait"
                            class="oe_highlight" groups="purchase.group_purchase_manager"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,wait,approved,cancel"/>
                </header>
                <sheet>
                    <field name="is_requester" invisible="1"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="department_id" string="Phòng ban"
                                   options="{'no_create': True}"/>
                            <field name="request_id" string="Người gửi" options="{'no_open': True}"/>
                            <field name="approver_id" string="Người xác nhận"
                                   options="{'no_open': True}"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="date_approve"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chi tiết sản phẩm">
                            <field name="request_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="uom_id"/>
                                    <field name="qty"/>
                                    <field name="qty_approve"
                                           attrs="{'invisible': [('parent.state', '=', 'draft')]}"/>
                                    <field name="total" readonly="1" force_save="1"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_qty"/>
                                <field name="total_amount" widget="monetary"
                                       class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>
                        <page string="Mô tả">
                            <field name="description" placeholder="Nhập ghi chú tại đây..."/>
                        </page>
                        <page string="lí do">
                            <field name="cancel_reason"
                                   attrs="{'invisible': [('state', '!=', 'cancel')]}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_purchase_request" model="ir.actions.act_window">
        <field name="name">Yêu cầu mua hàng</field>
        <field name="res_model">purchase.request</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">['|', ('state', '!=', 'draft'), ('request_id', '=', uid)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo phiếu yêu cầu mua hàng đầu tiên của bạn!
            </p>
        </field>
    </record>

    <menuitem id="menu_purchase_request_root"
              name="Mua sắm nội bộ"
              sequence="10"/>

    <menuitem id="menu_purchase_request_main"
              name="Yêu cầu mua hàng"
              parent="menu_purchase_request_root"
              action="action_purchase_request"
              sequence="10"/>
</odoo>