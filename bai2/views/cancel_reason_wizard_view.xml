<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_request_cancel_wizard_form" model="ir.ui.view">
        <field name="name">purchase.request.cancel.wizard.form</field>
        <field name="model">purchase.request.cancel.wizard</field>
        <field name="arch" type="xml">
            <form string="Lý do từ chối">
                <group>
                    <field name="reason" placeholder="Nhập lý do tại đây..." />
                </group>
                <footer>
                    <button name="action_confirm_cancel" string="Xác nhận hủy" type="object"
                        class="btn-danger" />
                    <button string="Trở lại" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>